{
  "name": "@bd-dm/ui",
  "version": "0.0.2",
  "description": "Minimalistic react UI library",
  "author": "Dmitry Bardyshev",
  "license": "ISC",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "repository": "https://github.com/bd-dm/ui",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/bd-dm"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(ts|tsx|js|jsx)$": "ts-jest"
    },
    "moduleNameMapper": {
      "^.+\\.(css|sass|scss)$": "identity-obj-proxy"
    }
  },
  "scripts": {
